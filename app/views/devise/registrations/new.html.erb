<section class="px-4 py-2">
  <h2 class="text-2xl font-thin">註冊</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'block font-semibold' %>
      <!-- <%= f.label :email, class: 'label' %> -->
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'px-3 py-2 text-lg border border-gray-400 rounded-lg focus:outline-none' %>
      <!-- <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %> -->

    </div>

    <div class="field">
      <%= f.label :password, '密碼', class: 'block font-semibold' %>
      <!-- <%= f.label :password, '密碼', class: 'label' %> -->
      <!-- <% if @minimum_password_length %>
      <em>(最少 <%= @minimum_password_length %> 字元)</em> -->
      <!-- <% end %> -->
      <%= f.password_field :password, autocomplete: "new-password", class: 'px-3 py-2 text-lg border border-gray-400 rounded-lg focus:outline-none' %>
      <!-- <%= f.password_field :password, autocomplete: "new-password", class: 'input' %> -->
    </div>

    <div class="field">
      <%= f.label :password_confirmation, '確認密碼', class: 'block font-semibold' %>
      <!-- <%= f.label :password_confirmation, '確認密碼', class: 'label' %> -->
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'px-3 py-2 text-lg border border-gray-400 rounded-lg focus:outline-none' %>
      <!-- <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %> -->
    </div>

    <div class="actions mt-2">
      <%= f.submit "Sign up", class: 'bg-gray-300 px-3 py-2 rounded' %>
      <!-- <%= f.submit "Sign up", class: 'button' %> -->
    </div>
  <% end %>

  <!-- <%= render "devise/shared/links" %> -->
</section>


